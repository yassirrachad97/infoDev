        gtag('config', 'UA-23581568-13');

        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    alert.classList.add('move-right');
                });
            }, 2500);
        });
